@model PlantDex.Application.DTO.UserManagement.RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddAdmin</title>
</head>
<body>

    <h1>Add Admin</h1>

    <form>

        <div>
            <label>First Name : </label>
            <input type="text" asp-for="FirstName" placeholder="First Name" />
            <span asp-validation-for="FirstName"></span>
        </div>


        <div>
            <label>Middle Name : </label>
            <input type="text" asp-for="MiddleName" placeholder="Middle Name" />
            <span asp-validation-for="MiddleName"></span>
        </div>

        <div>
            <label>Last Name : </label>
            <input type="text" asp-for="LastName" placeholder="Last Name" />
            <span asp-validation-for="LastName"></span>
        </div>


        <div>
            <label>Username : </label>
            <input type="text" asp-for="Username" placeholder="Username" />
            <span asp-validation-for="Username"></span>
        </div>


        <div>
            <label>Email : </label>
            <input type="text" asp-for="Email" placeholder="Email" />
            <span asp-validation-for="Email"></span>
        </div>


        <div>
            <label>Phone Number : </label>
            <input type="text" asp-for="PhoneNumber" placeholder="Phone Number" />
            <span asp-validation-for="PhoneNumber"></span>
        </div>


        <div>
            <label>Password : </label>
            <input type="password" asp-for="Password" placeholder="Password" />
            <span asp-validation-for="Password"></span>
        </div>


        <div>
            <label>Re-enter Password : </label>
            <input type="password" asp-for="ConfirmPassword" placeholder="Re-enter password" />
            <span asp-validation-for="ConfirmPassword"></span>
        </div>


        <div>
            <label>Account Type : </label>
            <select asp-for="AccountType">
                <option selected value=""></option>
                @foreach(var item in applicationConstants.accountTypes)
                {
                    <option value="@item">@item</option>
                }
            </select>
        </div>

        <div>
            <input type="submit" value="Submit"/>
        </div>

        <div asp-validation-summary="All"></div>

    </form>

</body>
</html>
